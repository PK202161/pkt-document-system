generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id               String    @id @default(cuid())
  docNumber        String    @unique
  docType          String
  status           String    @default("UPLOADED")
  uploadedBy       String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  filename         String?   @map("filename") @db.VarChar(255)
  filesize         Int?      @map("filesize")
  processingstatus String?   @default("PENDING") @map("processingstatus") @db.VarChar(20)
  n8nworkflowid    String?   @map("n8nworkflowid") @db.VarChar(100)
  processedat      DateTime? @map("processedat") @db.Timestamp(6)

  @@map("documents")
}

model users {
  id        String   @id
  username  String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime
}
